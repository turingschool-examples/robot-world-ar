<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="main.css"  type="text/css" />

</head>
<body>
  <header>
    <div id="wrapper" style="width:100%; text-align:center">
      <img src="https://i.imgur.com/w76WOh2.gif" alt="banner" height="300px" align="middle" width="100%">
    </div>
    </header>
    <div class="nav"  width="100px">
  <div class="navbar">
    <a href="/">Home</a>
    <div class="dropdown">
      <button class="dropbtn">Robots
        <i class="la la bub"></i>
      </button>
      <div class="dropdown-content" id="drop-down">
        <a href="/robots/new">Create a New Robot</a>
        <a href="/robots">View all robots</a>
      </div>
    </div>
  </div><br>
<h1>My Robots</h1>
<% @robots.each do |robot| %>
<div class="card">
    <img src="<%= robot.url %>" alt="something" height="268" width="280">
  <div class="container">
<p><a href="/robots/<%= robot.id %>/show">View Robot</a></p>
Name :  <%= robot.name %><br>
City :  <%= robot.city %><br>
State :  <%= robot.state %><br>
Department :  <%= robot.department %><br>
<a id="submit" class="myButton" href="/robots/<%= robot.id %>/edit">Edit</a>
  <div class="myButton">
<form action="/robots/<%= robot.id %>" method="POST">
          <input type="hidden" name="_method" value="delete"/>
          <input id="submit" type="submit"  class="me" value="Delete"/>
        </form>
      </div>
    </div>
      </div>


 <% end %>
</body>
</html>
